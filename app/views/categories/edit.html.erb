<%= link_to("<< Back to List", {action: 'list'}, :class => 'back-link') %>

<div class="category edit">
  <h2>Edit Category</h2>

  <%= form_for(:category, :url => {:action => 'update', id: @category.id}) do |f| %>

    <table summary="Category form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Image</th>
        <td>
          <%= f.fields_for(:image) do |i| %>
            <%= i.file_field(:image) %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Gallery</th>
        <td><%= f.select(:type_id, options_for_select(Type.all.collect {|t| [t.name, t.id]}, @category.type_id)) %>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Submit Changes") %>
    </div>

  <% end %>
</div>

